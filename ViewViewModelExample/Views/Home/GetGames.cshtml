@model ViewViewModelExample.ViewModels.HomeGetGamesVM
<h1>@ViewBag.PageTitle</h1>
<ul>
    @foreach(var game in Model.games)
    {
        <li>
            @game.GameTitle
            <a 
               asp-controller="Home" 
               asp-action="GetGame" 
               asp-route-GameId="@game.GameId"
               class="btn btn-outline-primary">Info</a>
            <a asp-controller="home" 
               asp-action="rategame"
               asp-route-gameId="@game.GameId"
               asp-route-rating="5"
               class="btn btn-outline-primary">
                Rate!
            </a>

        </li>
    }
</ul>





